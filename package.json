  "main": "index.js",
  "scripts": {
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "build": "tsc && cp src/config/*.json dist/config/ && tsc-alias -p tsconfig.json && tsc-esm-fix --src=dist --ext=.js && node fix-imports.js",
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "postinstall": "node ./scripts/postinstall.js",
    "docker:build": "docker build -t translogapi .",
    "docker:run": "docker run -p 3000:3000 --env-file .env translogapi",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f app",
    "docker:shell": "docker-compose exec app sh",
    "migrate:deploy": "npx prisma migrate deploy",
    "db:seed": "npx prisma db seed"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
