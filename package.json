    "eslint-plugin-prettier": "^5.5.1",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.20.3"
  },
  "dependencies": {
